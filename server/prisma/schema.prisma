generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Admin {
    id        Int      @id @default(autoincrement())
    username  String   @unique
    password  String
}

model Availability {
    id        Int      @id @default(autoincrement())
    date      DateTime
    startTime DateTime
    endTime   DateTime
    bookings  Booking[]  // Relation indicating that an availability can have multiple bookings
    status    String   @default("available") // can be "available" or "fullyBooked"
}

model Booking {
    id             Int          @id @default(autoincrement())
    date           DateTime
    startTime      DateTime
    endTime        DateTime
    clientName     String
    clientEmail    String
    status         String       @default("booked") // "booked", "cancelled"
    availabilityId Int
    availability   Availability @relation(fields: [availabilityId], references: [id], onDelete: Cascade)
}
